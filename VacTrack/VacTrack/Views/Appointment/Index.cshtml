@model List<VacTrack.Models.Appointment.AppointmentModel>
@{
    ViewData["Title"] = "Appointments";
}
<h2>Appointments</h2>
<div class="alert alert-info">The list of appointments is below.</div>
<table class="table">
    <thead>
        <tr>
            <td>Patient</td>
            <td>Vaccine</td>
            <td>Location</td>
            <td>Date</td>
            <td></td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Patient.FirstName @item.Patient.LastName</td>
    <td>@item.VaccinationLocation.Vaccine.Name</td>
    <td>@item.VaccinationLocation.Location.LocationName</td>
    <td>@item.DateTime</td>

    <td>
        <a href="@Url.Action("Details", "Appointment", new { id = item.AppointmentID })" class="btn btn-outline-primary" role="button">Info</a>
        <a href="@Url.Action("Edit", "Appointment", new { id = item.AppointmentID })" class="btn btn-outline-primary" role="button">Edit</a>
    </td>
</tr>
    }
</table>

<a href="@Url.Action("Create", "Appointment")" class="btn btn-primary" role="button">Add Appointment</a>
