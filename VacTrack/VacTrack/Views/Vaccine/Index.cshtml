@{
    ViewData["Title"] = "Vaccines";
}
<h2>Vaccines</h2>
<div class="alert alert-info">The list of vaccines is below.</div>
<table class="table">
    <thead>
        <tr>
            <td>Vaccine ID</td>
            <td>Vaccine Name</td>
            <td>Number of Doses</td>
            <td></td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.VaccineID</td>
    <td>@item.Name</td>
    <td>@item.NumOfDoses</td>
    <td>
        <a href="@Url.Action("Details", "Vaccine", new { id = item.VaccineID })" class="btn btn-outline-primary" role="button">Info</a>
        <a href="@Url.Action("Edit", "Vaccine", new { id = item.VaccineID })" class="btn btn-outline-primary" role="button">Edit</a>
    </td>
</tr>
    }
</table>

<a href="@Url.Action("Create", "Vaccine")" class="btn btn-primary" role="button">Add Vaccine</a>