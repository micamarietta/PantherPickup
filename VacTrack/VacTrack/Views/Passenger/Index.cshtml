@{
    ViewData["Title"] = "Passengers";
    }

    <!---- passenger page-->

    <div class="container">
    <div class="row">
        <div class="col col-lg-12 col-xl-6">
             <h2>Welcome passenger! </h2>
        </div>
      <div class="row">
           <div class="col col-md-12 col-lg-6">
               
            </div>
            <div class="col col-md-12 col-lg-6">
               <div class="p-3 float-end">
                    <a class="btn btn-primary" asp-area="" asp-controller="Passenger" asp-action="Profile">Profile</a>
                    <a class="btn btn-primary" asp-area="" asp-controller="Passenger" asp-action="Calendar">Calendar</a>
               </div>
            </div>
        </div>
   </div>

    <!--Google map-->
    <div class="text-center">
        <div id="map-container-google-1" class="z-depth-1-half map-container" style="height: 500px">
          <iframe src="https://maps.google.com/maps?q=orange&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" width="1250" height="450"
            style="border:0" allowfullscreen></iframe>
        </div>
    </div>

    <!--Google Maps-->

    <div class="text-center">
        <a class="nav-link text-dark" asp-area="" asp-controller="RideRequest" asp-action="Index">Create Ride Request</a>
    </div>


    <div id="accordion">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0">
        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Driver: Jessie Roux - April 22nd 5:00pm
        </button>
      </h5>
    </div>

    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body">
        <p>From: Chapman University</p>
        <p>To: Disney Land</p>
        <p>Number of Passengers: 4</p>
        <br />
        <button type="button" class="btn btn-danger">Cancel Request</button>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingTwo">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Driver: Ben Howard - May 3rd 1:00pm
        </button>
      </h5>
    </div>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
      <div class="card-body">
        <p>From: Chapman University</p>
        <p>To: LAX</p>
        <p>Number of Passengers: 1</p>
        <br />
        <button type="button" class="btn btn-danger">Cancel Request</button>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingThree">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Driver: Paul Row - May 10th 8:00am
        </button>
      </h5>
    </div>
    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
      <div class="card-body">
        <p>From: Chapman University</p>
        <p>To: Orange Circle</p>
        <p>Number of Passengers: 2</p>
        <br />
        <button type="button" class="btn btn-danger">Cancel Request</button>
      </div>
    </div>
  </div>
</div>