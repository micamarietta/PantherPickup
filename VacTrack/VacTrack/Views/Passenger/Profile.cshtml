@model PantherPickup.Models.Account.AccountModel
@{
    ViewData["Title"] = "Profile";
}

<section style="background-color: #eee;">
    <div class="row">
        <div class="row">
           <div class="col col-md-12 col-lg-6">
               
            </div>
            <div class="col col-md-12 col-lg-6">
               <div class="p-3 float-end">
                    <a class="btn btn-primary" asp-area="" asp-controller="Passenger" asp-action="Index">Home</a>
                    <a class="btn btn-primary" asp-area="" asp-controller="Passenger" asp-action="Calendar">Calendar</a>
               </div>
            </div>
        </div>
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava4.webp" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">@Model.Name</h5>
            <p class="text-muted mb-1">Passenger</p>
            <p class="text-muted mb-4"></p>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fas fa-globe fa-lg text-warning"></i>
                <p class="mb-0">https://mdbootstrap.com</p>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Model.Name</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Model.Email</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Year</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Model.Year</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Major</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Model.Major</p>
              </div>
            </div>
            <hr>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>