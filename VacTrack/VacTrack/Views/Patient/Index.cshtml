@{
    ViewData["Title"] = "Patients";
}
<h2>Patients</h2>
<div class="alert alert-info">The list of patients is below.</div>
<form action="@Url.Action("Index", "Patient")" method="POST">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Patient Name" aria-label="Patient Name" aria-describedby="button-addon2" id="Query" name="Query">
        <input type="submit" class="btn btn-outline-secondary" id="button-addon2" value="Search" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <td>Patient ID</td>
            <td>Patient Name</td>
            <td>Age</td>
            <td>Zip Code</td>
            <td></td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.PatientID</td>
        <td>@item.FirstName @item.LastName</td>
        <td>@item.Age</td>
        <td>@item.ZipCode</td>
        <td>
            <a href="@Url.Action("Details", "Patient", new { id = item.PatientID })" class="btn btn-outline-primary" role="button">Info</a>
            <a href="@Url.Action("Edit", "Patient", new { id = item.PatientID })" class="btn btn-outline-primary" role="button">Edit</a>
        </td>
    </tr>
    }
</table>

<a href="@Url.Action("Create", "Patient")" class="btn btn-primary" role="button">Add Patient</a>