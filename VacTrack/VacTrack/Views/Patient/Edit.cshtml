@model PantherPickup.Models.Patient.PatientModel
@{
    ViewData["Title"] = "Edit Patient";
}
<h2>Edit Patient</h2>
<form action="@Url.Action("Edit", "Patient", new { id = Model.PatientID})" method="post" class="row">
    <div class="col-sm-6 mb-3">
        <label for="FirstName" class="form-label">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName">
    </div>
    <div class="col-sm-6 mb-3">
        <label for="LastName" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName">
    </div>
    <div class="col-sm-6 mb-3">
        <label for="Age" class="form-label">Age</label>
        <input type="number" class="form-control" id="Age" name="Age" value="@Model.Age">
    </div>

    <div class="col-sm-6 mb-3">
        <label for="ZipCode" class="form-label">Zip Code</label>
        <input type="text" class="form-control" id="ZipCode" name="ZipCode" maxlength="5" value="@Model.ZipCode">
    </div>
    <div class="col-sm-12">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="@Url.Action("Delete", "Patient",new { id = Model.PatientID})" class="btn btn-danger">Delete</a>
    </div>
</form>