@model PantherPickup.Models.RideRequest.RideRequestModel

<div class="row">
    <div class="col col-6">
        <h1>Ride in Progress</h1>
             <h2> To: @Model.DropOffLoc</h2>
             <h2> From: @Model.PickupLoc</h2>
             
        </div>
   </div>

    <!--Google map-->
    <div class="row text-center">
        <div class="col col-12">
            <div id="map-container-google-1" class="z-depth-1-half map-container" style="height: 500px">
              <iframe src="https://maps.google.com/maps?q=orange,+CA&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" width="100%" height="100%"
                style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>

    <div class = "row text-center">
        <label> Once the ride has been completed, press "I've arrived"!</label>
    </div>

    <div class="row text-center">
        <div class="col col-12 p-4">
            <a class="btn btn-danger" asp-controller="Driver" asp-action="RideRate"asp-route-id=@Model.RideID>I've Arrived</a>
        </div>

    </div>

  

